	publisher = {arXiv},
	author = {Michelot, Théo and Glennie, Richard and Thomas, Len and Quick, Nicola and Harris, Catriona M.},
	month = dec,
	year = {2022},
	note = {arXiv:2212.09574 [stat]},
	keywords = {Statistics - Applications, Statistics - Methodology},
