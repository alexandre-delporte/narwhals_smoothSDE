	number = {4},
	urldate = {2023-06-05},
	journal = {Ecological Applications},
	author = {Friedlaender, A. S. and Hazen, E. L. and Goldbogen, J. A. and Stimpert, A. K. and Calambokidis, J. and Southall, B. L.},
	month = jun,
